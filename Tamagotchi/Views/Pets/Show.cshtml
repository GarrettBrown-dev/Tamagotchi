@* @using Tamagotchi.Models; *@

@{
  Layout = "_Layout";
}

<h1>@Model.Name</h1>
<img src="@Model.Image">
<ul>
  <p>Stats:</p>
  <li>Name: @Model.Name</li>
  <li>Hunger level: @Model.Food</li>
  <li>Attention level: @Model.Attention</li>
  <li>Energy level: @Model.Rest</li>
</ul>


<form action="/pets/@Model.Id/feed" method="post">
  <button type="submit" name="button">Feed!</button>
</form>
<form action="/pets/@Model.Id/play" method="post">
  <button type="submit" name="button">Play!</button>
</form>
<form action="/pets/@Model.Id/sleep" method="post">
  <button type="submit" name="button">Sleep!</button>
</form>

<a href='/pets'>Back to pets</a>